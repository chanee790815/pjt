# 5. ë¦¬ìŠ¤í¬ í˜„í™©
def view_risk_dashboard(sh, pjt_list):
    st.title("ğŸš¨ ë¦¬ìŠ¤í¬ ê³µì • ëª¨ë‹ˆí„°ë§")
    all_issues = []
    for p_name in pjt_list:
        try:
            df = pd.DataFrame(sh.worksheet(p_name).get_all_records())
            if not df.empty and 'ë¹„ê³ ' in df.columns:
                df['ì§„í–‰ë¥ '] = pd.to_numeric(df['ì§„í–‰ë¥ '], errors='coerce').fillna(0)
                issues = df[(df['ë¹„ê³ '].astype(str).str.strip() != "") & (df['ì§„í–‰ë¥ '] < 100)].copy()
                if not issues.empty:
                    issues.insert(0, 'í˜„ì¥ëª…', p_name)
                    all_issues.append(issues)
        except: pass
    if all_issues: st.dataframe(pd.concat(all_issues), use_container_width=True)
    else: st.success("ğŸ‰ í˜„ì¬ ì§„í–‰ ì¤‘ì¸ ë¦¬ìŠ¤í¬ ê³µì •ì´ ì—†ìŠµë‹ˆë‹¤.")

# 6. ë§ˆìŠ¤í„° ê´€ë¦¬ (ë³µêµ¬ ì™„ë£Œ)
def view_project_admin(sh, pjt_list):
    st.title("âš™ï¸ ë§ˆìŠ¤í„° ê´€ë¦¬")
    t1, t2, t3, t4, t5 = st.tabs(["â• ë“±ë¡", "âœï¸ ìˆ˜ì •", "ğŸ—‘ï¸ ì‚­ì œ", "ğŸ”„ ì—‘ì…€ ì—…ë¡œë“œ", "ğŸ“¥ ë§ˆìŠ¤í„° ë‹¤ìš´ë¡œë“œ"])
    
    with t1:
        st.subheader("â• ì‹ ê·œ í”„ë¡œì íŠ¸ ë“±ë¡")
        new_name = st.text_input("ìƒˆ í”„ë¡œì íŠ¸ ëª…ì¹­ ì…ë ¥")
        if st.button("í”„ë¡œì íŠ¸ ìƒì„±", type="primary") and new_name:
            if new_name not in pjt_list:
                with st.spinner("ìƒì„± ì¤‘..."):
                    new_ws = sh.add_worksheet(title=new_name, rows="100", cols="20")
                    headers = ["ì‹œì‘ì¼", "ì¢…ë£Œì¼", "ëŒ€ë¶„ë¥˜", "êµ¬ë¶„", "ì§„í–‰ìƒíƒœ", "ë¹„ê³ ", "ì§„í–‰ë¥ ", "ë‹´ë‹¹ì"]
                    new_ws.append_row(headers)
                    st.success(f"'{new_name}' í”„ë¡œì íŠ¸ê°€ ì„±ê³µì ìœ¼ë¡œ ìƒì„±ë˜ì—ˆìŠµë‹ˆë‹¤!"); time.sleep(1); st.rerun()
            else: st.error("ì´ë¯¸ ì¡´ì¬í•˜ëŠ” í”„ë¡œì íŠ¸ ëª…ì¹­ì…ë‹ˆë‹¤.")
            
    with t2:
        st.subheader("âœï¸ í”„ë¡œì íŠ¸ ì´ë¦„ ìˆ˜ì •")
        target_ren = st.selectbox("ìˆ˜ì •í•  í”„ë¡œì íŠ¸ ì„ íƒ", ["ì„ íƒ"] + pjt_list, key="ren_sel")
        new_ren_name = st.text_input("ìƒˆë¡œìš´ ëª…ì¹­")
        if st.button("ì´ë¦„ ë³€ê²½ ì‹¤í–‰") and target_ren != "ì„ íƒ" and new_ren_name:
            with st.spinner("ìˆ˜ì • ì¤‘..."):
                sh.worksheet(target_ren).update_title(new_ren_name)
                st.success(f"'{target_ren}' -> '{new_ren_name}' ìˆ˜ì • ì™„ë£Œ!"); time.sleep(1); st.rerun()

    with t3:
        st.subheader("ğŸ—‘ï¸ í”„ë¡œì íŠ¸ ì‚­ì œ")
        target_del = st.selectbox("ì‚­ì œí•  í”„ë¡œì íŠ¸ ì„ íƒ", ["ì„ íƒ"] + pjt_list, key="del_sel")
        st.warning("â€» ì‚­ì œ ì‹œ ëª¨ë“  ê³µì • ë°ì´í„°ê°€ ì˜êµ¬ì ìœ¼ë¡œ ì‚¬ë¼ì§‘ë‹ˆë‹¤.")
        confirm_del = st.checkbox(f"'{target_del}' í”„ë¡œì íŠ¸ë¥¼ ì˜êµ¬ ì‚­ì œí•¨ì— ë™ì˜í•©ë‹ˆë‹¤.")
        if st.button("ì˜êµ¬ ì‚­ì œ ìˆ˜í–‰", type="secondary") and target_del != "ì„ íƒ" and confirm_del:
            with st.spinner("ì‚­ì œ ì¤‘..."):
                sh.del_worksheet(sh.worksheet(target_del))
                st.success("í”„ë¡œì íŠ¸ê°€ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤!"); time.sleep(1); st.rerun()

    with t4:
        st.subheader("ğŸ”„ ì—‘ì…€ ë°ì´í„° ë™ê¸°í™”")
        target_sync = st.selectbox("ì—…ë°ì´íŠ¸ í”„ë¡œì íŠ¸ ì„ íƒ", ["ì„ íƒ"] + pjt_list, key="sync_sel")
        file = st.file_uploader("ì—‘ì…€ íŒŒì¼ ì„ íƒ", type=['xlsx', 'xlsm'])
        if target_sync != "ì„ íƒ" and file and st.button("ë°ì´í„° ë®ì–´ì“°ê¸°"):
            df_up = pd.read_excel(file).fillna("").astype(str)
            ws = sh.worksheet(target_sync); ws.clear(); ws.update([df_up.columns.values.tolist()] + df_up.values.tolist())
            st.success("ë™ê¸°í™” ì™„ë£Œ!")

    with t5:
        st.subheader("ğŸ“¥ ë§ˆìŠ¤í„° ë‹¤ìš´ë¡œë“œ")
        if st.button("ğŸ“š ì „ í”„ë¡œì íŠ¸ í†µí•© ë§ˆìŠ¤í„° ì—‘ì…€ ìƒì„±", type="primary", use_container_width=True):
            output = io.BytesIO()
            with pd.ExcelWriter(output, engine='openpyxl') as writer:
                for p in pjt_list:
                    try: pd.DataFrame(sh.worksheet(p).get_all_records()).to_excel(writer, index=False, sheet_name=p[:31])
                    except: pass
                try: pd.DataFrame(sh.worksheet('weekly_history').get_all_records()).to_excel(writer, index=False, sheet_name='weekly_history')
                except: pass
            st.download_button("ğŸ“¥ í†µí•© íŒŒì¼ ë°›ê¸°", output.getvalue(), f"PMO_Total_Master_{datetime.date.today()}.xlsx")

