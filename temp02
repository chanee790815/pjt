# 1. í†µí•© ëŒ€ì‹œë³´ë“œ
def view_dashboard(sh, pjt_list):
    st.title("ğŸ“Š í†µí•© ëŒ€ì‹œë³´ë“œ (í˜„í™© ë¸Œë¦¬í•‘)")
    
    dashboard_data = []
    
    with st.spinner("í”„ë¡œì íŠ¸ ë°ì´í„°ë¥¼ ë¶„ì„ ì¤‘ì…ë‹ˆë‹¤..."):
        for p_name in pjt_list:
            try:
                ws = safe_api_call(sh.worksheet, p_name)
                data = safe_api_call(ws.get_all_values)
                
                pm_name = "ë¯¸ì§€ì •"
                this_w = "ê¸ˆì£¼ ì‹¤ì  ë¯¸ì…ë ¥"
                next_w = "ì°¨ì£¼ ê³„íš ë¯¸ì…ë ¥"
                
                if len(data) > 0:
                    header = data[0][:7]
                    df = pd.DataFrame([r[:7] for r in data[1:]], columns=header) if len(data) > 1 else pd.DataFrame(columns=header)
                    
                    if len(data) > 1 and len(data[1]) > 7 and str(data[1][7]).strip(): pm_name = str(data[1][7]).strip()
                    if len(data) > 1 and len(data[1]) > 8 and str(data[1][8]).strip(): this_w = str(data[1][8]).strip()
                    if len(data) > 1 and len(data[1]) > 9 and str(data[1][9]).strip(): next_w = str(data[1][9]).strip()
                else:
                    df = pd.DataFrame()

                if not df.empty and 'ì§„í–‰ë¥ ' in df.columns:
                    avg_act = round(pd.to_numeric(df['ì§„í–‰ë¥ '], errors='coerce').fillna(0).mean(), 1)
                    avg_plan = round(df.apply(lambda r: calc_planned_progress(r.get('ì‹œì‘ì¼'), r.get('ì¢…ë£Œì¼')), axis=1).mean(), 1)
                else:
                    avg_act = 0.0; avg_plan = 0.0
                
                status_ui = "ğŸŸ¢ ì •ìƒ"
                b_style = "status-normal"
                if (avg_plan - avg_act) >= 10:
                    status_ui = "ğŸ”´ ì§€ì—°"
                    b_style = "status-delay"
                elif avg_act >= 100: 
                    status_ui = "ğŸ”µ ì™„ë£Œ"
                    b_style = "status-done"
                
                dashboard_data.append({
                    "p_name": p_name,
                    "pm_name": pm_name,
                    "this_w": this_w,
                    "next_w": next_w,
                    "avg_act": avg_act,
                    "avg_plan": avg_plan,
                    "status_ui": status_ui,
                    "b_style": b_style
                })
            except Exception as e:
                pass

    all_pms = sorted(list(set([d["pm_name"] for d in dashboard_data])))
    
    f_col1, f_col2 = st.columns([1, 3])
    with f_col1:
        selected_pm = st.selectbox("ğŸ‘¤ ë‹´ë‹¹ì ì¡°íšŒ", ["ì „ì²´"] + all_pms)
        
    if selected_pm != "ì „ì²´":
        filtered_data = [d for d in dashboard_data if d["pm_name"] == selected_pm]
    else:
        filtered_data = dashboard_data

    total_cnt = len(filtered_data)
    normal_cnt = len([d for d in filtered_data if d['status_ui'] == "ğŸŸ¢ ì •ìƒ"])
    delay_cnt = len([d for d in filtered_data if d['status_ui'] == "ğŸ”´ ì§€ì—°"])
    done_cnt = len([d for d in filtered_data if d['status_ui'] == "ğŸ”µ ì™„ë£Œ"])

    with f_col2:
        st.markdown(f"""
            <div class="metric-container" style="display: flex; gap: 10px; align-items: center; height: 100%; padding-top: 28px;">
                <div style="background: rgba(128,128,128,0.1); padding: 7px 12px; border-radius: 6px; font-weight: bold; font-size: 13px;">
                    ğŸ“Š ì¡°íšŒëœ í”„ë¡œì íŠ¸: <span style="color: #2196f3; font-size: 15px;">{total_cnt}</span>ê±´
                </div>
                <div style="background: rgba(33,150,243,0.1); padding: 7px 12px; border-radius: 6px; font-weight: bold; font-size: 13px; color: #1976d2;">
                    ğŸŸ¢ ì •ìƒ: {normal_cnt}ê±´
                </div>
                <div style="background: rgba(244,67,54,0.1); padding: 7px 12px; border-radius: 6px; font-weight: bold; font-size: 13px; color: #d32f2f;">
                    ğŸ”´ ì§€ì—°: {delay_cnt}ê±´
                </div>
                <div style="background: rgba(76,175,80,0.1); padding: 7px 12px; border-radius: 6px; font-weight: bold; font-size: 13px; color: #388e3c;">
                    ğŸ”µ ì™„ë£Œ: {done_cnt}ê±´
                </div>
            </div>
        """, unsafe_allow_html=True)
        
    st.divider()

    if total_cnt == 0:
        st.info("ì„ íƒëœ ë‹´ë‹¹ìì˜ í”„ë¡œì íŠ¸ê°€ ì—†ìŠµë‹ˆë‹¤.")
    else:
        cols = st.columns(2)
        for idx, d in enumerate(filtered_data):
            with cols[idx % 2]:
                with st.container(border=True):
                    h_col1, h_col2 = st.columns([7.5, 2.5], gap="small")
                    
                    with h_col1:
                        st.markdown(f"""
                            <div style="display: flex; align-items: center; flex-wrap: wrap; gap: 6px; margin-top: 2px;">
                                <h4 style="font-weight:700; margin:0; font-size:clamp(13.5px, 3.5vw, 16px); word-break:keep-all; line-height:1.2;">
                                    ğŸ—ï¸ {d['p_name']}
                                </h4>
                                <span class="pm-tag" style="margin:0;">PM: {d['pm_name']}</span>
                                <span class="status-badge {d['b_style']}" style="margin:0;">{d['status_ui']}</span>
                            </div>
                        """, unsafe_allow_html=True)
                        
                    with h_col2:
                        st.button("ğŸ” ìƒì„¸", key=f"btn_go_{d['p_name']}", on_click=navigate_to_project, args=(d['p_name'],), use_container_width=True)
                    
                    this_w_html = str(d['this_w']).replace('\n', '<br>')
                    next_w_html = str(d['next_w']).replace('\n', '<br>')

                    st.markdown(f'''
                        <div style="margin-bottom:4px; margin-top:2px;">
                            <p style="font-size:12.5px; opacity: 0.7; margin-top:0; margin-bottom:4px;">ê³„íš: {d['avg_plan']}% | ì‹¤ì : {d['avg_act']}%</p>
                            <div class="weekly-box" style="margin-top:0; line-height: 1.5;"><b>[ê¸ˆì£¼]</b> {this_w_html}<br><b>[ì°¨ì£¼]</b> {next_w_html}</div>
                        </div>
                    ''', unsafe_allow_html=True)
                    
                    st.progress(min(1.0, max(0.0, d['avg_act']/100)))

# 2. í”„ë¡œì íŠ¸ ìƒì„¸ ê´€ë¦¬
def view_project_detail(sh, pjt_list):
    st.title("ğŸ—ï¸ í”„ë¡œì íŠ¸ ìƒì„¸ ê´€ë¦¬")
    
    selected_pjt = st.selectbox("í˜„ì¥ ì„ íƒ", ["ì„ íƒ"] + pjt_list, key="selected_pjt")
    
    if selected_pjt != "ì„ íƒ":
        ws = safe_api_call(sh.worksheet, selected_pjt)
        data = safe_api_call(ws.get_all_values)
        
        current_pm = ""
        this_val = ""
        next_val = ""
        
        if len(data) > 0:
            header = data[0][:7]
            df = pd.DataFrame([r[:7] for r in data[1:]], columns=header) if len(data) > 1 else pd.DataFrame(columns=header)
            
            if len(data) > 1 and len(data[1]) > 7: current_pm = str(data[1][7]).strip()
            if len(data) > 1 and len(data[1]) > 8: this_val = str(data[1][8]).strip()
            if len(data) > 1 and len(data[1]) > 9: next_val = str(data[1][9]).strip()
        else:
            df = pd.DataFrame(columns=["ì‹œì‘ì¼", "ì¢…ë£Œì¼", "ëŒ€ë¶„ë¥˜", "êµ¬ë¶„", "ì§„í–‰ìƒíƒœ", "ë¹„ê³ ", "ì§„í–‰ë¥ "])

        if 'ì‹œì‘ì¼' in df.columns:
            df['ì‹œì‘ì¼'] = df['ì‹œì‘ì¼'].astype(str).str.split().str[0].replace('nan', '')
        if 'ì¢…ë£Œì¼' in df.columns:
            df['ì¢…ë£Œì¼'] = df['ì¢…ë£Œì¼'].astype(str).str.split().str[0].replace('nan', '')

        if 'ì§„í–‰ë¥ ' in df.columns:
            df['ì§„í–‰ë¥ '] = pd.to_numeric(df['ì§„í–‰ë¥ '], errors='coerce').fillna(0)

        col_pm1, col_pm2 = st.columns([3, 1])
        with col_pm1:
            new_pm = st.text_input("í”„ë¡œì íŠ¸ ë‹´ë‹¹ PM (H2 ì…€)", value=current_pm)
        with col_pm2:
            st.write("")
            if st.button("PM ì„±í•¨ ì €ì¥"):
                safe_api_call(ws.update, 'H2', [[new_pm]])
                st.success("PMì´ ì—…ë°ì´íŠ¸ë˜ì—ˆìŠµë‹ˆë‹¤!")
        
        st.divider()

        tab1, tab2, tab3 = st.tabs(["ğŸ“Š ê°„íŠ¸ ì°¨íŠ¸", "ğŸ“ˆ S-Curve ë¶„ì„", "ğŸ“ ì£¼ê°„ ì—…ë¬´ ë³´ê³ "])
        
        with tab1:
            try:
                cdf = df.copy()
                original_len = len(cdf)
                
                cdf['ì‹œì‘ì¼'] = pd.to_datetime(cdf['ì‹œì‘ì¼'], errors='coerce')
                cdf['ì¢…ë£Œì¼'] = pd.to_datetime(cdf['ì¢…ë£Œì¼'], errors='coerce')
                cdf = cdf.dropna(subset=['ì‹œì‘ì¼', 'ì¢…ë£Œì¼'])
                
                dropped_len = original_len - len(cdf)
                if dropped_len > 0:
                    st.warning(f"âš ï¸ ë‚ ì§œ í˜•ì‹ ì˜¤ë¥˜(ì˜ˆ: 2ì›” 30ì¼ ë“± ì¡´ì¬í•˜ì§€ ì•ŠëŠ” ë‚ ì§œ)ë¡œ ì¸í•´ {dropped_len}ê°œì˜ í•­ëª©ì´ ì°¨íŠ¸ì—ì„œ ì œì™¸ë˜ì—ˆìŠµë‹ˆë‹¤.")
                
                if not cdf.empty:
                    cdf = cdf.reset_index(drop=True)
                    
                    if 'ëŒ€ë¶„ë¥˜' in cdf.columns:
                        cdf['ëŒ€ë¶„ë¥˜'] = cdf['ëŒ€ë¶„ë¥˜'].astype(str).replace({'nan': 'ë¯¸ì§€ì •', '': 'ë¯¸ì§€ì •'})
                    if 'êµ¬ë¶„' not in cdf.columns:
                        cdf['êµ¬ë¶„'] = 'ë‚´ìš© ì—†ìŒ'
                        
                    cdf['ì§„í–‰ë¥ '] = pd.to_numeric(cdf['ì§„í–‰ë¥ '], errors='coerce').fillna(0).astype(float)
                    
                    cdf['êµ¬ë¶„_ê³ ìœ '] = cdf.apply(lambda r: f"{r.name + 1}. {str(r['êµ¬ë¶„']).strip()}", axis=1)
                    
                    def calc_text_width(text):
                        return sum(2 if ord(c) > 127 else 1 for c in str(text))
                    
                    max_width = cdf['êµ¬ë¶„_ê³ ìœ '].apply(calc_text_width).max()
                    
                    cdf['êµ¬ë¶„_ê³ ìœ '] = cdf['êµ¬ë¶„_ê³ ìœ '].apply(
                        lambda x: str(x) + "&nbsp;" * int((max_width - calc_text_width(x)) * 2.5)
                    )
                    
                    cdf['duration'] = (cdf['ì¢…ë£Œì¼'] - cdf['ì‹œì‘ì¼']).dt.total_seconds() * 1000
                    cdf['duration'] = cdf['duration'].apply(lambda d: 86400000.0 if d <= 0 else d)
                    
                    cdf['ì‹œì‘ì¼_str'] = cdf['ì‹œì‘ì¼'].dt.strftime('%Y-%m-%d')
                    cdf['ì¢…ë£Œì¼_str'] = cdf['ì¢…ë£Œì¼'].dt.strftime('%Y-%m-%d')
                    
                    fig = go.Figure()
                    fig.add_trace(go.Bar(
                        base=cdf['ì‹œì‘ì¼'],
                        x=cdf['duration'],
                        y=[cdf['ëŒ€ë¶„ë¥˜'].tolist(), cdf['êµ¬ë¶„_ê³ ìœ '].tolist()],
                        orientation='h',
                        marker=dict(
                            color=cdf['ì§„í–‰ë¥ '],
                            colorscale='RdYlGn',
                            cmin=0,
                            cmax=100,
                            showscale=True,
                            colorbar=dict(title="ì§„í–‰ë¥ (%)")
                        ),
                        customdata=cdf[['ì‹œì‘ì¼_str', 'ì¢…ë£Œì¼_str', 'ëŒ€ë¶„ë¥˜', 'êµ¬ë¶„']].values,
                        hovertemplate="<b>[%{customdata[2]}] %{customdata[3]}</b><br>ì‹œì‘ì¼: %{customdata[0]}<br>ì¢…ë£Œì¼: %{customdata[1]}<br>ì§„í–‰ë¥ : %{marker.color}%<extra></extra>"
                    ))
                    
                    today_ms = pd.Timestamp.now().normalize().timestamp() * 1000
                    fig.add_vline(x=today_ms, line_width=2.5, line_color="purple", 
                                  annotation_text="ì˜¤ëŠ˜", annotation_position="top",
                                  annotation_font=dict(color="purple", size=13, weight="bold"))
                    
                    fig.update_xaxes(
                        type="date",             
                        dtick="M1",              
                        tickformat="%y.%-m",     
                        tickangle=0,             
                        showgrid=True,           
                        gridwidth=1,
                        gridcolor='rgba(200, 200, 200, 0.6)',
                        showline=True, linewidth=1, linecolor='rgba(200, 200, 200, 0.6)', mirror=True,
                        title_text=""
                    )
                    
                    fig.update_yaxes(
                        autorange="reversed",
                        type="multicategory",    
                        categoryorder="trace",   
                        showgrid=True,
                        gridwidth=1,
                        gridcolor='rgba(200, 200, 200, 0.6)',
                        showline=True, linewidth=1, linecolor='rgba(200, 200, 200, 0.6)', mirror=True,
                        dividercolor='rgba(150, 150, 150, 0.8)',
                        dividerwidth=1,
                        title_text=""
                    )
                    
                    fig.update_layout(
                        height=max(400, len(cdf) * 35),
                        plot_bgcolor='white',  
                        paper_bgcolor='white',
                        margin=dict(l=10, r=20, t=40, b=20)
                    )
                    
                    st.plotly_chart(fig, use_container_width=True)
                else:
                    st.info("ì°¨íŠ¸ë¥¼ ê·¸ë¦´ ìˆ˜ ìˆëŠ” ìœ íš¨í•œ ë‚ ì§œ ë°ì´í„°ê°€ ë¶€ì¡±í•©ë‹ˆë‹¤. í¸ì§‘ê¸°ì—ì„œ ë‚ ì§œë¥¼ í™•ì¸í•´ ì£¼ì„¸ìš”.")
            except Exception as e:
                st.error(f"ì°¨íŠ¸ë¥¼ ê·¸ë¦¬ëŠ” ì¤‘ ì„¸ë¶€ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤: {e}")

        with tab2:
            try:
                sdf = df.copy()
                sdf['ì‹œì‘ì¼'] = pd.to_datetime(sdf['ì‹œì‘ì¼'], errors='coerce').dt.date
                sdf['ì¢…ë£Œì¼'] = pd.to_datetime(sdf['ì¢…ë£Œì¼'], errors='coerce').dt.date
                sdf = sdf.dropna(subset=['ì‹œì‘ì¼', 'ì¢…ë£Œì¼'])
                if not sdf.empty:
                    min_d, max_d = sdf['ì‹œì‘ì¼'].min(), sdf['ì¢…ë£Œì¼'].max()
                    d_range = pd.date_range(min_d, max_d, freq='W-MON').date.tolist()
                    p_trend = [sdf.apply(lambda r: calc_planned_progress(r['ì‹œì‘ì¼'], r['ì¢…ë£Œì¼'], d), axis=1).mean() for d in d_range]
                    a_prog = pd.to_numeric(sdf['ì§„í–‰ë¥ '], errors='coerce').fillna(0).mean()
                    fig_s = go.Figure()
                    fig_s.add_trace(go.Scatter(x=[d.strftime("%Y-%m-%d") for d in d_range], y=p_trend, mode='lines+markers', name='ê³„íš'))
                    fig_s.add_trace(go.Scatter(x=[datetime.date.today().strftime("%Y-%m-%d")], y=[a_prog], mode='markers', name='í˜„ì¬ ì‹¤ì ', marker=dict(size=12, color='red', symbol='star')))
                    fig_s.update_layout(title="ì§„ì²™ë¥  ì¶”ì´ (S-Curve)", yaxis_title="ì§„ì²™ë¥ (%)")
                    st.plotly_chart(fig_s, use_container_width=True)
            except: pass

        with tab3:
            st.subheader("ğŸ“‹ ìµœê·¼ ì£¼ê°„ ì—…ë¬´ ì´ë ¥")
            try:
                h_ws = safe_api_call(sh.worksheet, 'weekly_history')
                h_data = safe_api_call(h_ws.get_all_records)
                h_df = pd.DataFrame(h_data)
                if not h_df.empty:
                    h_df['í”„ë¡œì íŠ¸ëª…'] = h_df['í”„ë¡œì íŠ¸ëª…'].astype(str).str.strip()
                    p_match = h_df[h_df['í”„ë¡œì íŠ¸ëª…'] == selected_pjt.strip()]
                    if not p_match.empty:
                        latest = p_match.iloc[-1]
                        
                        hist_this_w = str(latest.get('ê¸ˆì£¼ì—…ë¬´', latest.get('ì£¼ìš”í˜„í™©', '-'))).replace('\n', '<br>')
                        hist_next_w = str(latest.get('ì°¨ì£¼ì—…ë¬´', '-')).replace('\n', '<br>')
                        
                        st.markdown(f"""
                        <div class="history-box">
                            <p style="font-size:14px; opacity: 0.7; margin-bottom:10px;">ğŸ“… <b>ìµœì¢… ë³´ê³ ì¼:</b> {latest.get('ë‚ ì§œ', '-')}</p>
                            <p style="margin-bottom:12px; line-height: 1.6;"><b>âœ”ï¸ ê¸ˆì£¼ ì£¼ìš” ì—…ë¬´:</b><br>{hist_this_w}</p>
                            <p style="margin-bottom:0; line-height: 1.6;"><b>ğŸ”œ ì°¨ì£¼ ì£¼ìš” ì—…ë¬´:</b><br>{hist_next_w}</p>
                        </div>
                        """, unsafe_allow_html=True)
                    else: st.info("ì•„ì§ ë“±ë¡ëœ ì£¼ê°„ ì—…ë¬´ ê¸°ë¡ì´ ì—†ìŠµë‹ˆë‹¤.")
            except: st.warning("ì´ë ¥ ë°ì´í„°ë¥¼ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.")

            st.divider()

            st.subheader("ğŸ“ ì£¼ê°„ ì—…ë¬´ ì‘ì„± ë° ë™ê¸°í™” (I2, J2 ì…€ & íˆìŠ¤í† ë¦¬)")
            
            st.info("ğŸ’¡ ìš°ì¸¡ í•˜ë‹¨ ëª¨ì„œë¦¬ë¥¼ ë§ˆìš°ìŠ¤ë¡œ ë“œë˜ê·¸í•˜ë©´ ì…ë ¥ ì°½ì˜ í¬ê¸°ë¥¼ ììœ ë¡­ê²Œ ëŠ˜ë¦¬ê±°ë‚˜ ì¤„ì¼ ìˆ˜ ìˆìŠµë‹ˆë‹¤.")
            with st.form("weekly_sync_form"):
                in_this = st.text_area("âœ”ï¸ ê¸ˆì£¼ ì£¼ìš” ì—…ë¬´ (I2)", value=this_val, height=250)
                in_next = st.text_area("ğŸ”œ ì°¨ì£¼ ì£¼ìš” ì—…ë¬´ (J2)", value=next_val, height=250)
                if st.form_submit_button("ì‹œíŠ¸ ë°ì´í„° ì—…ë°ì´íŠ¸ ë° ì´ë ¥ ì €ì¥"):
                    safe_api_call(ws.update, 'I2', [[in_this]])
                    safe_api_call(ws.update, 'J2', [[in_next]])
                    try:
                        h_ws = safe_api_call(sh.worksheet, 'weekly_history')
                        safe_api_call(h_ws.append_row, [datetime.date.today().strftime("%Y-%m-%d"), selected_pjt, in_this, in_next, st.session_state.user_id])
                    except: pass
                    st.success("ì„±ê³µì ìœ¼ë¡œ ì—…ë°ì´íŠ¸ ë° ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤!"); time.sleep(1); st.rerun()

        st.write("---")
        st.subheader("ğŸ“ ìƒì„¸ ê³µì •í‘œ í¸ì§‘ (A~Gì—´ ì „ìš©)")
        edited = st.data_editor(df, use_container_width=True, num_rows="dynamic")
        
        if st.button("ğŸ’¾ ë³€ê²½ì‚¬í•­ ì „ì²´ ì €ì¥"):
            full_data = []
            header_7 = edited.columns.values.tolist()[:7]
            while len(header_7) < 7: header_7.append("")
            
            full_data.append(header_7 + ["PM", "ê¸ˆì£¼", "ì°¨ì£¼"])
            
            edited_rows = edited.fillna("").astype(str).values.tolist()
            if len(edited_rows) > 0:
                for i, r in enumerate(edited_rows):
                    r_7 = r[:7]
                    while len(r_7) < 7: r_7.append("")
                    
                    if i == 0:
                        r_7.extend([new_pm, in_this, in_next])
                    else:
                        r_7.extend([new_pm, "", ""])
                        
                    full_data.append(r_7)
            else:
                full_data.append([""] * 7 + [new_pm, in_this, in_next])
                
            safe_api_call(ws.clear)
            safe_api_call(ws.update, 'A1', full_data)
            st.success("ë°ì´í„°ê°€ ì™„ë²½í•˜ê²Œ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤!"); time.sleep(1); st.rerun()

# 3. ì¼ ë°œì „ëŸ‰ ë° ì¼ì¡° ë¶„ì„
def view_solar(sh):
    st.title("â˜€ï¸ ì¼ ë°œì „ëŸ‰ ë° ì¼ì¡° ë¶„ì„")
    try:
        db_ws = safe_api_call(sh.worksheet, 'Solar_DB')
        raw = safe_api_call(db_ws.get_all_records)
        if not raw:
            st.info("ë°ì´í„°ê°€ ì—†ìŠµë‹ˆë‹¤.")
            return
        
        df_db = pd.DataFrame(raw)
        df_db['ë‚ ì§œ'] = pd.to_datetime(df_db['ë‚ ì§œ'], errors='coerce')
        df_db['ë°œì „ì‹œê°„'] = pd.to_numeric(df_db['ë°œì „ì‹œê°„'], errors='coerce').fillna(0)
        df_db['ì¼ì‚¬ëŸ‰í•©ê³„'] = pd.to_numeric(df_db['ì¼ì‚¬ëŸ‰í•©ê³„'], errors='coerce').fillna(0)
        df_db = df_db.dropna(subset=['ë‚ ì§œ'])

        with st.expander("ğŸ” ë°œì „ëŸ‰ ìƒì„¸ ê²€ìƒ‰ í•„í„°", expanded=True):
            f1, f2 = st.columns(2)
            with f1:
                locs = sorted(df_db['ì§€ì '].unique().tolist())
                sel_loc = st.selectbox("ì¡°íšŒ ì§€ì—­ ì„ íƒ", locs)
            with f2:
                default_start = datetime.date(2025, 1, 1)
                default_end = datetime.date(2025, 12, 31)
                dr = st.date_input("ì¡°íšŒ ê¸°ê°„", [default_start, default_end])
        
        mask = (df_db['ì§€ì '] == sel_loc)
        if len(dr) == 2:
            mask = mask & (df_db['ë‚ ì§œ'].dt.date >= dr[0]) & (df_db['ë‚ ì§œ'].dt.date <= dr[1])
        
        f_df = df_db[mask].sort_values('ë‚ ì§œ')

        if not f_df.empty:
            m1, m2, m3 = st.columns(3)
            m1.metric("í‰ê·  ë°œì „ ì‹œê°„", f"{f_df['ë°œì „ì‹œê°„'].mean():.2f} h")
            m2.metric("í‰ê·  ì¼ì‚¬ëŸ‰", f"{f_df['ì¼ì‚¬ëŸ‰í•©ê³„'].mean():.2f} MJ/mÂ²")
            m3.metric("ê²€ìƒ‰ ë°ì´í„° ìˆ˜", f"{len(f_df)} ê±´")

            # --- [í•µì‹¬] ì¼ì‚¬ëŸ‰(ë§‰ëŒ€), ë°œì „ì‹œê°„(ì„ ), ì˜ˆì¸¡ì¶”ì„¸(ë¹¨ê°„ì„ ) í˜¼í•© ì°¨íŠ¸ ---
            fig_solar = go.Figure()
            
            # 1. ì¼ì‚¬ëŸ‰í•©ê³„ (ì£¼í™©ìƒ‰ ë§‰ëŒ€) - 1ì°¨ Yì¶•
            fig_solar.add_trace(go.Bar(
                x=f_df['ë‚ ì§œ'], 
                y=f_df['ì¼ì‚¬ëŸ‰í•©ê³„'], 
                name='ì¼ì‚¬ëŸ‰ (ê¸°ìƒì²­)', 
                marker_color='rgba(255, 165, 0, 0.6)', 
                yaxis='y1'
            ))
            
            # 2. ì‹¤ì œ ë°œì „ì‹œê°„ (íŒŒë€ìƒ‰ ì„ ) - 2ì°¨ Yì¶•
            fig_solar.add_trace(go.Scatter(
                x=f_df['ë‚ ì§œ'], 
                y=f_df['ë°œì „ì‹œê°„'], 
                name='ì‹¤ì œ ë°œì „ì‹œê°„', 
                mode='lines+markers', 
                line=dict(color='rgba(33, 150, 243, 1)', width=2), 
                marker=dict(size=4),
                yaxis='y2'
            ))
            
            # 3. ì˜ˆì¸¡ ë°œì „ì‹œê°„ ì¶”ì„¸ (ë¹¨ê°„ìƒ‰ ë‘êº¼ìš´ ì„ ) - 2ì°¨ Yì¶•
            # ì˜ˆì¸¡ ë°œì „ì‹œê°„ = (ì¼ì‚¬ëŸ‰ / 3.6) * 0.8(íš¨ìœ¨ 80%) ê³„ì‚° í›„ 14ì¼ ì´ë™í‰ê· ì„  ì ìš©í•˜ì—¬ ìŠ¤ë¬´ë”© ì²˜ë¦¬
            f_df['ì˜ˆì¸¡_ë°œì „ì‹œê°„'] = (f_df['ì¼ì‚¬ëŸ‰í•©ê³„'] / 3.6) * 0.8
            f_df['ì˜ˆì¸¡_ì¶”ì„¸ì„ '] = f_df['ì˜ˆì¸¡_ë°œì „ì‹œê°„'].rolling(window=14, min_periods=1, center=True).mean()
            
            fig_solar.add_trace(go.Scatter(
                x=f_df['ë‚ ì§œ'], 
                y=f_df['ì˜ˆì¸¡_ì¶”ì„¸ì„ '], 
                name='ì˜ˆì¸¡ ë°œì „ëŸ‰ (Trend)', 
                mode='lines', 
                line=dict(color='red', width=4), 
                yaxis='y2'
            ))

            # [ì˜¤ë¥˜ í•´ê²°] ìµœì‹  ë¬¸ë²•ìœ¼ë¡œ title_font ì†ì„± ì ìš©
            fig_solar.update_layout(
                title=f"[{sel_loc}] ì¼ì‚¬ëŸ‰ ë° ì‹¤ì œ/ì˜ˆì¸¡ ë°œì „ì‹œê°„ ì¶”ì´ ë¹„êµ",
                xaxis=dict(title="ë‚ ì§œ"),
                yaxis=dict(
                    title=dict(text="ì¼ì‚¬ëŸ‰ (MJ/mÂ²)", font=dict(color="orange")), 
                    tickfont=dict(color="orange")
                ),
                yaxis2=dict(
                    title=dict(text="ë°œì „ì‹œê°„ (h)", font=dict(color="blue")), 
                    tickfont=dict(color="blue"), 
                    anchor="free", 
                    overlaying="y", 
                    side="right"
                ),
                hovermode="x unified",
                legend=dict(orientation="h", yanchor="bottom", y=1.02, xanchor="right", x=1)
            )
            
            st.plotly_chart(fig_solar, use_container_width=True)
            # --------------------------------------------------------------------------------

            st.subheader("ğŸ“Š ê²€ìƒ‰ ê²°ê³¼ ìƒì„¸ ë‚´ì—­")
            
            output_solar = io.BytesIO()
            with pd.ExcelWriter(output_solar, engine='openpyxl') as writer:
                export_df = f_df.copy()
                export_df['ë‚ ì§œ'] = export_df['ë‚ ì§œ'].dt.strftime('%Y-%m-%d')
                export_df.to_excel(writer, index=False, sheet_name='ë°œì „ëŸ‰_ê²€ìƒ‰ê²°ê³¼')
            
            col_down1, col_down2 = st.columns([8, 2])
            with col_down2:
                st.download_button(
                    label="ğŸ“¥ ë°ì´í„° ì—‘ì…€ ë‹¤ìš´ë¡œë“œ",
                    data=output_solar.getvalue(),
                    file_name=f"ì¼ì¼ë°œì „ëŸ‰_ì¡°íšŒê²°ê³¼_{datetime.date.today()}.xlsx",
                    mime="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
                    use_container_width=True
                )
            
            st.dataframe(f_df, use_container_width=True)
        else:
            st.warning("ì¡°ê±´ì— ë§ëŠ” ë°ì´í„°ê°€ ì—†ìŠµë‹ˆë‹¤.")

    except Exception as e:
        st.error(f"ë¶„ì„ ë°ì´í„°ë¥¼ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤: {e}")

# 4. ê²½ì˜ì§€í‘œ KPI
def view_kpi(sh):
    st.title("ğŸ“‰ ê²½ì˜ ì‹¤ì  ë° KPI")
    try:
        ws = safe_api_call(sh.worksheet, 'KPI')
        df = pd.DataFrame(safe_api_call(ws.get_all_records))
        st.table(df)
        if not df.empty and 'ì‹¤ì ' in df.columns:
            st.plotly_chart(px.pie(df, values='ì‹¤ì ', names=df.columns[0], title="í•­ëª©ë³„ ì‹¤ì  ë¹„ì¤‘"))
    except: st.warning("KPI ì‹œíŠ¸ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.")

# 5. ë§ˆìŠ¤í„° ê´€ë¦¬
def view_project_admin(sh, pjt_list):
    st.title("âš™ï¸ ë§ˆìŠ¤í„° ê´€ë¦¬")
    t1, t2, t3, t4, t5 = st.tabs(["â• ë“±ë¡", "âœï¸ ìˆ˜ì •", "ğŸ—‘ï¸ ì‚­ì œ", "ğŸ”„ ì—…ë¡œë“œ", "ğŸ“¥ ë‹¤ìš´ë¡œë“œ"])
    
    with t1:
        new_n = st.text_input("ì‹ ê·œ í”„ë¡œì íŠ¸ëª…")
        if st.button("ìƒì„±") and new_n:
            new_ws = safe_api_call(sh.add_worksheet, title=new_n, rows="100", cols="20")
            safe_api_call(new_ws.append_row, ["ì‹œì‘ì¼", "ì¢…ë£Œì¼", "ëŒ€ë¶„ë¥˜", "êµ¬ë¶„", "ì§„í–‰ìƒíƒœ", "ë¹„ê³ ", "ì§„í–‰ë¥ ", "PM", "ê¸ˆì£¼", "ì°¨ì£¼"])
            st.success("ìƒì„± ì™„ë£Œ!"); st.rerun()
            
    with t2:
        target = st.selectbox("ìˆ˜ì • ëŒ€ìƒ", ["ì„ íƒ"] + pjt_list, key="ren")
        new_name = st.text_input("ë³€ê²½í•  ì´ë¦„")
        if st.button("ì´ë¦„ ë³€ê²½") and target != "ì„ íƒ" and new_name:
            ws = safe_api_call(sh.worksheet, target)
            safe_api_call(ws.update_title, new_name)
            st.success("ìˆ˜ì • ì™„ë£Œ!"); st.rerun()

    with t3:
        target_del = st.selectbox("ì‚­ì œ ëŒ€ìƒ", ["ì„ íƒ"] + pjt_list, key="del")
        conf = st.checkbox("ì˜êµ¬ ì‚­ì œì— ë™ì˜í•©ë‹ˆë‹¤.")
        if st.button("ì‚­ì œ ìˆ˜í–‰") and target_del != "ì„ íƒ" and conf:
            ws = safe_api_call(sh.worksheet, target_del)
            safe_api_call(sh.del_worksheet, ws)
            st.success("ì‚­ì œ ì™„ë£Œ!"); st.rerun()

    with t4:
        st.info("ğŸ’¡ ì—‘ì…€ íŒŒì¼ ë‚´ì˜ 'ì‹œíŠ¸ ì´ë¦„'ì´ êµ¬ê¸€ ì‹œíŠ¸ì˜ 'í”„ë¡œì íŠ¸ëª…'ê³¼ ì¼ì¹˜í•˜ë©´ í•œ ë²ˆì— ëª¨ë‘ ì—…ë°ì´íŠ¸ë©ë‹ˆë‹¤.")
        file = st.file_uploader("í†µí•© ì—‘ì…€ íŒŒì¼ ì—…ë¡œë“œ", type=['xlsx'])
        
        if file and st.button("ğŸ”„ ì¼ê´„ ë™ê¸°í™” (ìë™ ë§¤ì¹­)"):
            try:
                all_sheets = pd.read_excel(file, sheet_name=None, engine='openpyxl')
                
                updated_count = 0
                skipped_sheets = []
                
                with st.spinner("ë°ì´í„°ë¥¼ ë§¤ì¹­í•˜ì—¬ ì¼ê´„ ì—…ë°ì´íŠ¸ ì¤‘ì…ë‹ˆë‹¤..."):
                    for sheet_name, df_up in all_sheets.items():
                        s_name = sheet_name.strip()
                        
                        if s_name in pjt_list:
                            ws = safe_api_call(sh.worksheet, s_name)
                            df_up = df_up.fillna("").astype(str)
                            
                            safe_api_call(ws.clear)
                            safe_api_call(ws.update, [df_up.columns.values.tolist()] + df_up.values.tolist())
                            updated_count += 1
                        else:
                            skipped_sheets.append(s_name)
                
                if updated_count > 0:
                    st.success(f"ğŸ‰ ì´ {updated_count}ê°œì˜ í”„ë¡œì íŠ¸ê°€ ì„±ê³µì ìœ¼ë¡œ ì¼ê´„ ì—…ë°ì´íŠ¸ë˜ì—ˆìŠµë‹ˆë‹¤!")
                else:
                    st.warning("âš ï¸ ì¼ì¹˜í•˜ëŠ” ì‹œíŠ¸ ì´ë¦„ì´ ì—†ì–´ ì—…ë°ì´íŠ¸ëœ í•­ëª©ì´ ì—†ìŠµë‹ˆë‹¤.")
                    
                if skipped_sheets:
                    st.caption(f"ê±´ë„ˆë›´ ì‹œíŠ¸ (ì´ë¦„ ë¶ˆì¼ì¹˜ ë˜ëŠ” ì‹œìŠ¤í…œ ì‹œíŠ¸): {', '.join(skipped_sheets)}")
                    
            except Exception as e:
                st.error(f"íŒŒì¼ ì²˜ë¦¬ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤: {e}")

    with t5:
        if st.button("ğŸ“š í†µí•© ë°±ì—… ì—‘ì…€ ìƒì„±"):
            output = io.BytesIO()
            with pd.ExcelWriter(output, engine='openpyxl') as writer:
                for p in pjt_list:
                    try:
                        ws = safe_api_call(sh.worksheet, p)
                        data = safe_api_call(ws.get_all_values)
                        pd.DataFrame(data[1:], columns=data[0]).to_excel(writer, index=False, sheet_name=p[:31])
                    except: pass
            st.download_button("ğŸ“¥ í†µí•© íŒŒì¼ ë°›ê¸°", output.getvalue(), f"Backup_{datetime.date.today()}.xlsx")

# ---------------------------------------------------------
# [SECTION 3] ë©”ì¸ ì»¨íŠ¸ë¡¤ëŸ¬
# ---------------------------------------------------------

if check_login():
    client = get_client()
    if client:
        try:
            sh = safe_api_call(client.open, 'pms_db')
            sys_names = ['weekly_history', 'Solar_DB', 'KPI', 'Sheet1', 'Control_Center', 'Dashboard_Control', 'í†µí•© ëŒ€ì‹œë³´ë“œ']
            pjt_list = [ws.title for ws in sh.worksheets() if ws.title not in sys_names]
            
            if "selected_menu" not in st.session_state:
                st.session_state.selected_menu = "í†µí•© ëŒ€ì‹œë³´ë“œ"
            if "selected_pjt" not in st.session_state:
                st.session_state.selected_pjt = "ì„ íƒ"
            
            st.sidebar.title("ğŸ“ PMO ë©”ë‰´")
            menu = st.sidebar.radio("ë©”ë‰´ ì„ íƒ", ["í†µí•© ëŒ€ì‹œë³´ë“œ", "í”„ë¡œì íŠ¸ ìƒì„¸", "ì¼ ë°œì „ëŸ‰ ë¶„ì„", "ê²½ì˜ì§€í‘œ(KPI)", "ë§ˆìŠ¤í„° ì„¤ì •"], key="selected_menu")
            
            if menu == "í†µí•© ëŒ€ì‹œë³´ë“œ": view_dashboard(sh, pjt_list)
            elif menu == "í”„ë¡œì íŠ¸ ìƒì„¸": view_project_detail(sh, pjt_list)
            elif menu == "ì¼ ë°œì „ëŸ‰ ë¶„ì„": view_solar(sh)
            elif menu == "ê²½ì˜ì§€í‘œ(KPI)": view_kpi(sh)
            elif menu == "ë§ˆìŠ¤í„° ì„¤ì •": view_project_admin(sh, pjt_list)
            
            if st.sidebar.button("ë¡œê·¸ì•„ì›ƒ"): st.session_state.logged_in = False; st.rerun()
        except Exception as e: st.error(f"ì„œë²„ ì ‘ì†ì´ ì§€ì—°ë˜ê³  ìˆìŠµë‹ˆë‹¤. ì ì‹œ í›„ ìƒˆë¡œê³ ì¹¨ í•´ì£¼ì„¸ìš”.")
